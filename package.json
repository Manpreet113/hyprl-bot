{
  "name": "hyprl-bot",
  "version": "1.0.0",
  "description": "Discord bot for HyprL project support server",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "NODE_ENV=development nodemon index.js",
    "prod": "NODE_ENV=production node index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "clean": "rm -rf logs/* data/*.db dist/",
    "backup": "mkdir -p backups && cp -r data/ backups/data-$(date +%Y%m%d-%H%M%S)",
    "install:clean": "rm -rf node_modules package-lock.json && npm install",
    "deploy": "npm run lint && npm run test && npm run prod",
    "setup": "npm install && npm run format && npm run lint:fix"
  },
  "keywords": [
    "discord",
    "bot",
    "hyprl",
    "support"
  ],
  "author": "Manpreet",
  "license": "ISC",
  "dependencies": {
    "@discordjs/builders": "^1.11.2",
    "@discordjs/rest": "^2.5.1",
    "@discordjs/voice": "^0.18.0",
    "@distube/ytdl-core": "^4.14.4",
    "@supabase/supabase-js": "^2.50.5",
    "axios": "^1.11.0",
    "discord-player": "^7.1.0",
    "discord.js": "^14.21.0",
    "dotenv": "^17.2.1",
    "ffmpeg-static": "^5.2.0",
    "fs-extra": "^11.3.0",
    "node-cron": "^4.2.1",
    "play-dl": "^1.9.7",
    "string-similarity": "^4.0.4",
    "ytdl-core": "^4.11.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "overrides": {
    "glob": "^9.3.5",
    "rimraf": "^4.4.1",
    "inflight": "npm:@npmcli/promise-spawn@^7.0.1",
    "are-we-there-yet": "npm:@npmcli/arborist@^7.5.4",
    "gauge": "npm:@npmcli/arborist@^7.5.4",
    "npmlog": "npm:@npmcli/arborist@^7.5.4",
    "@npmcli/move-file": "npm:@npmcli/fs@^3.1.1"
  }
}
